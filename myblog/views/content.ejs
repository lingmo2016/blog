    </div>
	
	<!--评论-->
	    <div class="module-comment module-comment-page" sty>
		   <div class="header">
		        <h2>参与评论</h2>
				<form action="/content/add" method="post">
				<input type="hidden" name="a_id" value="<%=vo1.a_id%>"/>
				<div class="description">
				    <textarea class="area" id="commentTextarea" name="c_content"></textarea>
				</div>
				
				<input type="hidden" name="img" />
				<div class="operation">
				 评论人：  <input type="text" name="c_name" />
					
					<input type="submit" class="btn-comment" value="评论" />
				</div>
				</form>
		  </div>
		 
		    <div class="list">
		         <div class="total">共<span><%=length%></span>条</div>
				 <ul class="feed">
				     
				  <% vo.forEach(function(vo){%> 
				<li class="item clearfix" data-uk="5748593" data-commentid="6782614021837641582" data-uname=<%=vo.c_name%>><div class="img-wrapper fn-fl">
				<a href="/share/home?uk=5748593" class="link" target="_blank">
				 <img class="fn-block" src="./images/p1.jpg" width="50" height="50">
				</a>
				</div>
				<div class="item-info">
				   
                <% 
		        var date=new Date();
				
				var y=date.getFullYear();
				var m=date.getMonth()+1;
				var d=date.getDate();
				var h=date.getHours();
				var mm=date.getMinutes();
				var ss=date.getSeconds();
				
				var time=y+"-"+m+"-"+d+"  "+h+":"+mm+":"+ss; %>
				
				
				    <p class="info-head">
					    <a href="/share/home?uk=5748593" target="_blank" class="talk"><%=vo.c_name%>
						</a>：
					</p>
					<p class="body"><%=vo.c_content%></p>
					<p class="foot clearfix">
					    <a class="reply fn-fr" href="javascript:void(0);">回复</a>
						<span class="time fn-fl"><%=time%></span>
					</p>
				</div>
				</li>
				<% });%>
				
				
				
				
				
			</ul>
			</div>
		</div>	
		
